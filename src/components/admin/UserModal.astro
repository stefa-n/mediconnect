<!-- User Management Modal -->
<div id="user-modal" class="hidden fixed inset-0 bg-black/50 z-50 items-center justify-center p-4">
  <div id="user-modal-content" class="bg-card rounded-xl border border-border p-6 max-w-2xl w-full scale-95 opacity-0 transition-all duration-200">
    <div class="flex items-center justify-between mb-6">
      <h3 id="user-modal-title" class="text-xl font-semibold text-foreground">Add User</h3>
      <button id="close-user-modal" class="text-muted-foreground hover:text-foreground transition-colors">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>
    
    <form id="user-form" class="space-y-4">
      <input type="hidden" id="user-id" />
      
      <div id="email-search-section">
        <label class="block text-sm font-medium text-foreground mb-2">Email Address *</label>
        <div class="flex gap-2">
          <input 
            type="email" 
            id="user-email" 
            required
            placeholder="Enter email to search"
            class="flex-1 px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <button type="button" id="search-user-btn" class="px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
            <i class="fas fa-search"></i>
          </button>
        </div>
        <p class="text-xs text-muted-foreground mt-1">Search for existing user by email</p>
      </div>

      <div id="user-details-section" class="hidden space-y-4">
        <div>
          <label class="block text-sm font-medium text-foreground mb-2">Full Name</label>
          <input 
            type="text" 
            id="user-fullname" 
            readonly
            class="w-full px-4 py-2 bg-muted rounded-lg border border-border text-foreground"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-foreground mb-2">Role *</label>
          <select 
            id="user-role" 
            required
            class="w-full px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          >
            <option value="">Select a role</option>
            <option value="hospital_admin">Hospital Admin</option>
            <option value="mediconnect_admin">MediConnect Admin</option>
            <option value="medic">Medic</option>
            <option value="patient">Patient</option>
          </select>
        </div>

        <div id="hospital-assignment-section" class="hidden">
          <label class="block text-sm font-medium text-foreground mb-2">Assign Hospital *</label>
          <select 
            id="user-hospital" 
            class="w-full px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          >
            <option value="">Select a hospital</option>
          </select>
        </div>

        <div id="department-section" class="hidden">
          <label class="block text-sm font-medium text-foreground mb-2">Department</label>
          <input 
            type="text" 
            id="user-department" 
            placeholder="e.g., Cardiology, Oncology"
            class="w-full px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>
      </div>
      
      <div class="flex gap-3 pt-4">
        <button type="submit" id="save-user-btn" class="hidden flex-1 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
          <i class="fas fa-save mr-2"></i>
          Save User
        </button>
        <button type="button" id="cancel-user-btn" class="flex-1 px-4 py-2 border border-border rounded-lg hover:bg-accent transition-colors">
          Cancel
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  #user-modal {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  #user-modal-content {
    transition: transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1), 
                opacity 0.2s ease-out;
  }
</style>
