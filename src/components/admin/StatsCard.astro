---
interface Props {
  icon: string;
  label: string;
  value: string | number;
  color?: 'blue' | 'green' | 'purple' | 'orange' | 'red';
}

const { icon, label, value, color = 'blue' } = Astro.props;

const colorClasses = {
  blue: 'bg-blue-500/10 text-blue-500',
  green: 'bg-green-500/10 text-green-500',
  purple: 'bg-purple-500/10 text-purple-500',
  orange: 'bg-orange-500/10 text-orange-500',
  red: 'bg-red-500/10 text-red-500'
};

const iconClass = colorClasses[color];
---

<div class="bg-card rounded-lg border border-border p-6 hover:shadow-lg transition-shadow">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm text-muted-foreground mb-1">{label}</p>
      <p class="text-3xl font-bold text-foreground">{value}</p>
    </div>
    <div class={`w-12 h-12 rounded-lg ${iconClass} flex items-center justify-center`}>
      <i class={`fas fa-${icon} text-xl`}></i>
    </div>
  </div>
</div>
