<!-- Hospital Management Modal -->
<div id="hospital-modal" class="hidden fixed inset-0 bg-black/50 z-50 items-center justify-center p-4">
  <div id="hospital-modal-content" class="bg-card rounded-xl border border-border p-6 max-w-2xl w-full scale-95 opacity-0 transition-all duration-200">
    <div class="flex items-center justify-between mb-6">
      <h3 id="hospital-modal-title" class="text-xl font-semibold text-foreground">Add Hospital</h3>
      <button id="close-hospital-modal" class="text-muted-foreground hover:text-foreground transition-colors">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>
    
    <form id="hospital-form" class="space-y-4">
      <input type="hidden" id="hospital-id" />
      
      <div>
        <label class="block text-sm font-medium text-foreground mb-2">Hospital Name *</label>
        <input 
          type="text" 
          id="hospital-name" 
          required
          placeholder="Enter hospital name"
          class="w-full px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
        />
      </div>
      
      <div>
        <label class="block text-sm font-medium text-foreground mb-2">Address</label>
        <input 
          type="text" 
          id="hospital-address" 
          placeholder="Enter hospital address"
          class="w-full px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
        />
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-foreground mb-2">Phone</label>
          <input 
            type="tel" 
            id="hospital-phone" 
            placeholder="Phone number"
            class="w-full px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-foreground mb-2">Email</label>
          <input 
            type="email" 
            id="hospital-email" 
            placeholder="Email address"
            class="w-full px-4 py-2 bg-background rounded-lg border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>
      </div>
      
      <div class="flex gap-3 pt-4">
        <button type="submit" class="flex-1 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
          <i class="fas fa-save mr-2"></i>
          Save Hospital
        </button>
        <button type="button" id="cancel-hospital-btn" class="flex-1 px-4 py-2 border border-border rounded-lg hover:bg-accent transition-colors">
          Cancel
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  #hospital-modal {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  #hospital-modal-content {
    transition: transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1), 
                opacity 0.2s ease-out;
  }
</style>
