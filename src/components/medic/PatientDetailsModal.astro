<!-- Patient Details Modal -->
<div id="patient-details-modal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-[90] p-4 overflow-y-auto">
  <div class="min-h-screen flex items-center justify-center py-8">
    <div id="patient-details-modal-content" class="bg-white rounded-2xl shadow-2xl max-w-5xl w-full transform transition-all scale-95 opacity-0">
      <!-- Header -->
      <div class="sticky top-0 bg-gradient-to-r from-blue-600 to-purple-600 text-white p-6 rounded-t-2xl z-10">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div id="patient-avatar" class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center text-white font-bold text-2xl backdrop-blur-sm">
              P
            </div>
            <div>
              <h3 id="patient-name" class="text-2xl font-bold">Patient Name</h3>
              <p id="patient-email" class="text-blue-100 text-sm">patient@email.com</p>
            </div>
          </div>
          <button id="close-patient-modal" class="text-white/80 hover:text-white transition-colors p-2">
            <i class="fas fa-times text-2xl"></i>
          </button>
        </div>
        
        <!-- Patient Basic Info -->
        <div class="grid grid-cols-3 gap-4 mt-4 pt-4 border-t border-white/20">
          <div>
            <p class="text-xs text-blue-100 mb-1">CNP</p>
            <p id="patient-cnp" class="font-semibold">-</p>
          </div>
          <div>
            <p class="text-xs text-blue-100 mb-1">Total Visits</p>
            <p id="patient-visits" class="font-semibold">0</p>
          </div>
          <div>
            <p class="text-xs text-blue-100 mb-1">Last Visit</p>
            <p id="patient-last-visit" class="font-semibold">-</p>
          </div>
        </div>
      </div>

      <!-- Tabs -->
      <div class="border-b border-gray-200 bg-gray-50 sticky top-[180px] z-10">
        <nav class="flex gap-1 px-6" id="patient-tabs">
          <button class="patient-tab active px-4 py-3 font-medium text-sm border-b-2 transition-colors" data-tab="overview">
            <i class="fas fa-user mr-2"></i>Overview
          </button>
          <button class="patient-tab px-4 py-3 font-medium text-sm border-b-2 transition-colors" data-tab="history">
            <i class="fas fa-file-medical mr-2"></i>Medical History
          </button>
          <button class="patient-tab px-4 py-3 font-medium text-sm border-b-2 transition-colors" data-tab="prescriptions">
            <i class="fas fa-pills mr-2"></i>Prescriptions
          </button>
          <button class="patient-tab px-4 py-3 font-medium text-sm border-b-2 transition-colors" data-tab="appointments">
            <i class="fas fa-calendar-alt mr-2"></i>Appointments
          </button>
        </nav>
      </div>

      <!-- Tab Content -->
      <div class="p-6 max-h-[600px] overflow-y-auto">
        <!-- Overview Tab -->
        <div id="tab-overview" class="tab-content">
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Contact Information -->
            <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl p-6 border border-blue-100">
              <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <i class="fas fa-address-card text-blue-600"></i>
                Contact Information
              </h4>
              <div class="space-y-3">
                <div class="flex items-start gap-3">
                  <i class="fas fa-envelope text-gray-400 mt-1"></i>
                  <div>
                    <p class="text-xs text-gray-500">Email</p>
                    <p id="overview-email" class="text-sm font-medium text-gray-900">-</p>
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <i class="fas fa-id-card text-gray-400 mt-1"></i>
                  <div>
                    <p class="text-xs text-gray-500">CNP</p>
                    <p id="overview-cnp" class="text-sm font-medium text-gray-900">-</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Quick Stats -->
            <div class="bg-gradient-to-br from-green-50 to-teal-50 rounded-xl p-6 border border-green-100">
              <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <i class="fas fa-chart-line text-green-600"></i>
                Quick Stats
              </h4>
              <div class="grid grid-cols-2 gap-4">
                <div class="text-center p-3 bg-white rounded-lg">
                  <div id="stat-appointments" class="text-2xl font-bold text-green-600">0</div>
                  <div class="text-xs text-gray-600">Appointments</div>
                </div>
                <div class="text-center p-3 bg-white rounded-lg">
                  <div id="stat-prescriptions" class="text-2xl font-bold text-purple-600">0</div>
                  <div class="text-xs text-gray-600">Prescriptions</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="mt-6 flex gap-3">
            <button id="add-history-btn" class="flex-1 px-4 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all shadow-lg hover:shadow-xl">
              <i class="fas fa-plus mr-2"></i>Add Medical Record
            </button>
            <button id="add-prescription-btn" class="flex-1 px-4 py-3 bg-gradient-to-r from-green-600 to-teal-600 text-white rounded-lg hover:from-green-700 hover:to-teal-700 transition-all shadow-lg hover:shadow-xl">
              <i class="fas fa-prescription mr-2"></i>New Prescription
            </button>
          </div>
        </div>

        <!-- Medical History Tab -->
        <div id="tab-history" class="tab-content hidden">
          <div class="flex justify-between items-center mb-4">
            <h4 class="text-lg font-semibold text-gray-900">Medical History</h4>
            <button id="add-history-btn-2" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-all text-sm">
              <i class="fas fa-plus mr-2"></i>Add Record
            </button>
          </div>
          <div id="medical-history-list" class="space-y-4">
            <!-- Medical history items will be loaded here -->
            <div class="text-center py-12 text-gray-400">
              <i class="fas fa-file-medical text-5xl mb-4 opacity-50"></i>
              <p>No medical history records yet</p>
            </div>
          </div>
        </div>

        <!-- Prescriptions Tab -->
        <div id="tab-prescriptions" class="tab-content hidden">
          <div class="flex justify-between items-center mb-4">
            <h4 class="text-lg font-semibold text-gray-900">Prescriptions</h4>
            <button id="add-prescription-btn-2" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-all text-sm">
              <i class="fas fa-plus mr-2"></i>New Prescription
            </button>
          </div>
          <div id="prescriptions-list" class="space-y-4">
            <!-- Prescriptions will be loaded here -->
            <div class="text-center py-12 text-gray-400">
              <i class="fas fa-pills text-5xl mb-4 opacity-50"></i>
              <p>No prescriptions yet</p>
            </div>
          </div>
        </div>

        <!-- Appointments Tab -->
        <div id="tab-appointments" class="tab-content hidden">
          <h4 class="text-lg font-semibold text-gray-900 mb-4">Appointment History</h4>
          <div id="appointments-history-list" class="space-y-4">
            <!-- Appointments will be loaded here -->
            <div class="text-center py-12 text-gray-400">
              <i class="fas fa-calendar-alt text-5xl mb-4 opacity-50"></i>
              <p>No appointments yet</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .patient-tab {
    @apply text-gray-600 border-transparent hover:text-gray-900 hover:border-gray-300;
  }
  
  .patient-tab.active {
    @apply text-blue-600 border-blue-600;
  }

  #patient-details-modal {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  #patient-details-modal-content {
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), 
                opacity 0.3s ease-out;
  }
</style>
