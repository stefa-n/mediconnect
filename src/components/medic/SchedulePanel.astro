<div class="bg-card rounded-xl shadow-lg border border-border overflow-hidden h-full">
  <div class="p-6 border-b border-border bg-gradient-to-r from-green-50 to-teal-50">
    <div class="flex items-start sm:items-center justify-between mb-4 gap-3">
      <div>
        <h3 class="text-xl font-bold text-foreground flex items-center gap-2">
          <i class="fas fa-calendar-day text-green-600"></i>
          Schedule
        </h3>
        <p class="text-sm text-muted-foreground mt-1" id="today-date">Loading...</p>
      </div>
    </div>
    <div class="flex items-center gap-2 sm:gap-3 bg-white rounded-lg p-1 shadow-sm border border-gray-200 w-full sm:w-fit overflow-x-auto">
      <button 
        id="today-btn"
        class="schedule-toggle-btn active px-3 sm:px-4 py-2 rounded-md text-sm font-medium transition-all bg-gradient-to-r from-green-600 to-teal-600 text-white shadow-lg whitespace-nowrap"
      >
        <i class="fas fa-calendar-day mr-2"></i>
        Today
      </button>
      <button 
        id="upcoming-btn"
        class="schedule-toggle-btn px-3 sm:px-4 py-2 rounded-md text-sm font-medium transition-all text-gray-600 hover:bg-gray-100 whitespace-nowrap"
      >
        <i class="fas fa-clock mr-2"></i>
        Upcoming
      </button>
    </div>
  </div>

  <div class="px-6 pt-4 pb-2 border-b border-border bg-gray-50/50">
    <div class="flex flex-wrap gap-2">
      <button class="schedule-filter-btn active px-3 py-1.5 rounded-lg text-sm font-medium transition-all" data-filter="all">
        All
      </button>
      <button class="schedule-filter-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-all" data-filter="scheduled">
        Scheduled
      </button>
      <button class="schedule-filter-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-all" data-filter="completed">
        Completed
      </button>
    </div>
  </div>

  <div id="today-schedule" class="p-6">
    <!-- Today's appointments will be rendered here -->
  </div>

  <div id="upcoming-appointments" class="p-6 hidden">
    <!-- Upcoming appointments will be rendered here -->
  </div>
</div>
